<?xml version='1.0' encoding='UTF-8'?>
<popup>
	<contents js="1"><![CDATA[
<table>
	<tr>
		<td>
			<fieldset>
				<legend>Document par défaut</legend>
				<table>
					<tr>
						<td align="right"><label for="e_{EDITOR_NAME}_FontSize">@FontSize@</label></td>
						<td><select id="e_{EDITOR_NAME}_FontSize">
							<option value="10px">10px</option>
							<option value="12px">12px</option>
							<option value="13px" selected>13px</option>
							<option value="15px">15px</option>
							<option value="20px">20px</option>
							<option value="25px">25px</option>
						</select></td>
					</tr>
					<tr>
						<td align="right"><label for="e_{EDITOR_NAME}_WhiteSpaces">@WhiteSpaces@</label></td>
						<td><input id="e_{EDITOR_NAME}_WhiteSpaces" type="checkbox"></td>
					</tr>
					<tr>
						<td align="right"><label for="e_{EDITOR_NAME}_TabSize">@TabSize@</label></td>
						<td><select id="e_{EDITOR_NAME}_TabSize">
							<option value="2">2</option>
							<option value="3">3</option>
							<option value="4" selected>4</option>
							<option value="5">5</option>
							<option value="6">6</option>
							<option value="7">7</option>
							<option value="8">8</option>
							<option value="16">16</option>
						</select></td>
					</tr>
					<tr>
						<td align="right"><label for="e_{EDITOR_NAME}_SoftTab">@SoftTab@</label></td>
						<td><input id="e_{EDITOR_NAME}_SoftTab" type="checkbox"></td>
					</tr>
					<tr>
						<td align="right"><label for="e_{EDITOR_NAME}_Columns">@Columns@</label></td>
						<td><input id="e_{EDITOR_NAME}_Columns" type="checkbox"></td>
					</tr>
					<tr>
						<td align="right"><label for="e_{EDITOR_NAME}_Lines">@Lines@</label></td>
						<td><input id="e_{EDITOR_NAME}_Lines" type="checkbox"></td>
					</tr>
					<tr>
						<td align="right"><label for="e_{EDITOR_NAME}_Gutter">@LinesNumber@</label></td>
						<td><input id="e_{EDITOR_NAME}_Gutter" type="checkbox"></td>
					</tr>
					<tr>
						<td align="right"><label for="e_{EDITOR_NAME}_LineHeight">@LineHeight@</label></td>
						<td><select id="e_{EDITOR_NAME}_LineHeight">
							<option value="1">1</option>
							<option value="1.1">1.1</option>
							<option value="1.2">1.2</option>
							<option value="1.3" selected>1.3</option>
							<option value="1.5">1.5</option>
							<option value="2">2</option>
						</select></td>
					</tr>
				</table>
			</fieldset>
			
		</td>
		<td>
			<table>
				<tr>
					<td><input id="e_{EDITOR_NAME}_TopMenu" type="checkbox"></td>
					<td><label for="e_{EDITOR_NAME}_TopMenu">@TopMenu@</label></td>
				</tr>
				<tr>
					<td><input id="e_{EDITOR_NAME}_TabMenu" type="checkbox"></td>
					<td><label for="e_{EDITOR_NAME}_TabMenu">@TabMenu@</label></td>
				</tr>
				<tr>
					<td><input id="e_{EDITOR_NAME}_Status" type="checkbox"></td>
					<td><label for="e_{EDITOR_NAME}_Status">@Status@</label></td>
				</tr>
				<!--
				<tr>
					<td><input id="e_{EDITOR_NAME}_Fold" type="checkbox"></td>
					<td><label for="e_{EDITOR_NAME}_Fold">@Fold@</label></td>
				</tr>
				-->
			</table>
		</td>
	</tr>
</table>
	]]></contents>
</popup>